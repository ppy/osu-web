# EditorConfig is awesome: http://editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# php uses 4 space indentation for php files
[*.php]
indent_size = 4
